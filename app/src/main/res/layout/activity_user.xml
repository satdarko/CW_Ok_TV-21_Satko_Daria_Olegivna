<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvUserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER CABINET"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnMyAddresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Refresh Statuses"
        android:backgroundTint="#2196F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        
        <Button
            android:id="@+id/btnGeneratorControl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âš¡ Generator"
            android:backgroundTint="#673AB7"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnViewSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“… Schedule"
            android:backgroundTint="#009688"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnReportFailure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âš ï¸ Report Broken"
            android:backgroundTint="#FF9800"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnSystemLogs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“© News"
            android:backgroundTint="#3F51B5"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âš™ï¸ Add / Remove Address"
        android:backgroundTint="#607D8B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Console:"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvInfoLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome! Click 'Refresh' to see data."
            android:fontFamily="monospace"
            android:textColor="#333333"
            android:textSize="14sp"/>
    </ScrollView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="10dp"/>

</LinearLayout>